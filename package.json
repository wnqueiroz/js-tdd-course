{
  "name": "@wnqueiroz/spotify-wrapper",
  "version": "1.0.1",
  "description": "A wrapper to work with the Spotify Web API.",
  "main": "lib/index.js",
  "scripts": {
    "clear": "rimraf lib",
    "build": "yarn clear && ./node_modules/.bin/babel --out-dir lib src",
    "build:umd": "./node_modules/.bin/webpack --output-filename spotify-wrapper.umd.js",
    "build:umd:min": "./node_modules/.bin/webpack --output-filename spotify-wrapper.umd.min.js -p",
    "build:all": "yarn build && yarn build:umd && yarn build:umd:min",
    "build:watch": "yarn build --watch",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint && npm run test:coverage",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "yarn test --watch",
    "test:coverage": "nyc npm test",
    "coveralls": "npm run test:coverage && nyc report --reporter=text-lcov | coveralls"
  },
  "files": [
    "dist",
    "lib"
  ],
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wnqueiroz/js-tdd-course.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "William Queiroz <williamdenovaisqueiroz@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wnqueiroz/js-tdd-course/issues"
  },
  "homepage": "https://github.com/wnqueiroz/js-tdd-course#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "1.7.0",
    "babel-register": "6.26.0",
    "chai": "3.5.0",
    "coveralls": "^3.0.2",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-mocha": "^5.2.0",
    "husky": "1.0.0-rc.9",
    "mocha": "5.2.0",
    "node-fetch": "^2.2.0",
    "nyc": "13.0.1",
    "rimraf": "^2.6.2",
    "sinon": "^6.2.0",
    "sinon-chai": "^3.2.0",
    "webpack": "^2.4.1"
  }
}
